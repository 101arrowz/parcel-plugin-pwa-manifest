{
  "name": "parcel-plugin-pwa-manifest",
  "version": "2.3.0",
  "description": "A Parcel plugin that generates a Web App Manifest, creates all necessary icons, and more!",
  "main": "lib/index.js",
  "author": "Arjun Barrett",
  "license": "MIT",
  "keywords": [
    "pwa",
    "parcel-bundler",
    "parcel",
    "manifest",
    "webmanifest",
    "favicon",
    "icon"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/101arrowz/parcel-plugin-pwa-manifest.git"
  },
  "scripts": {
    "prettify": "prettier --single-quote --trailing-comma none --write index.ts",
    "build": "tsc && yarn prettify && parcel build index.ts -t node --out-dir lib/ --detailed-report --no-source-maps --no-cache --experimental-scope-hoisting",
    "prepack": "yarn build",
    "preversion": "yarn prettify"
  },
  "dependencies": {
    "sharp": "^0.23.2"
  },
  "peerDependencies": {
    "parcel-bundler": ">=1.9"
  },
  "devDependencies": {
    "@types/node": "^12.12.6",
    "@types/parcel-bundler": "^1.12.1",
    "@types/sharp": "^0.23.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.18.2",
    "typescript": "^3.7.2"
  }
}
